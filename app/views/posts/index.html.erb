<h1>Posts</h1>

<%= link_to "New Post", new_post_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Body</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.author %></td>
        <td><%= truncate(post.body, length: 50) %></td>
        <td>
          <%= link_to "Show", post %>
          <%= link_to "Edit", edit_post_path(post) %>
          <%= link_to "Delete", post, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
